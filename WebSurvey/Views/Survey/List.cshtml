@using WebSurvey.Models.Survey
@model IEnumerable<Survey>
@{
    ViewData["Title"] = "Открытые опросы";
}

<h2><i class="bi bi-list-check"></i> @ViewData["Title"]</h2>
<hr>

@if (Model.Count() > 0)
{
    @foreach (Survey survey in Model)
    {
        <div class="container">
            <h5><a class="link" asp-controller="Survey" asp-action="Status" asp-route-Id="@survey.Id">@survey.Name</a></h5>
            <h6>Описание: @survey.Description</h6>
        </div>
        <hr>
    }
}
else
{
    <h5>Открытых опросов не найдено</h5>
}