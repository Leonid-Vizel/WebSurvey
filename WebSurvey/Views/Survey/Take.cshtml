@using WebSurvey.Models.ViewModel
@model (SurveyResult, string)
@{
    ViewData["Title"] = Model.Item2;
    int counter = 1;
}

<h1 class="text-center">@Model.Item2</h1>
<form method="post">
    @foreach (KeyValuePair<SurveyQuestion, object?> question in Model.Item1.Results)
    {
        <b>Вопрос #@counter: @question.Key.Name</b>
        <div class="row container">
            @switch (question.Key.Type)
            {
                case WebSurvey.Models.Database.QuestionType.Text:
                    if (question.Value != null)
                    {
                        <textarea class="form-control" value="@question.Value"></textarea>
                    }
                    else
                    {
                        <textarea class="form-control"></textarea>
                    }
                    break;
                case WebSurvey.Models.Database.QuestionType.Radio:
                    foreach (SurveyQuestionOption option in question.Key.Options)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="question @question.Key Option @option.Id">
                            <label class="form-check-label" for="question @question.Key Option @option.Id">@option.Text</label>
                        </div>
                    }
                    break;
                case WebSurvey.Models.Database.QuestionType.Check:
                foreach (SurveyQuestionOption option in question.Key.Options)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="flexCheckDefault" id="question @question.Key Option @option.Id">
                            <label class="form-check-label" for="question @question.Key Option @option.Id">@option.Text</label>
                        </div>
                    }
                    break;
            }
        </div>
        counter++;
    }
    <button type = "submit" class = "btn btn-outline-primary">Отправить результаты</button>
</form>