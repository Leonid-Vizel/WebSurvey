@using WebSurvey.Models.Voting
@model IEnumerable<Voting>
@{
    ViewData["Title"] = "Открытые голосования";
}

<h2><i class="bi bi-list-check"></i> @ViewData["Title"]</h2>
<hr>

@if (Model.Count() > 0)
{
    @foreach (Voting voting in Model)
    {
        <div class="container">
            <h5><a class="link" asp-controller="Voting" asp-action="Status" asp-route-Id="@voting.Id">@voting.Name</a></h5>
            <h6>Описание: @voting.Description</h6>
        </div>
        <hr>
    }
}
else
{
    <h5>Открытых голосований не найдено</h5>
}