@using WebSurvey.Models.Voting
@model IEnumerable<Voting>
@{
    ViewData["Title"] = "Мои голосования";
}

<h2>@ViewData["Title"]</h2>
<hr>

@if (Model.Count() > 0)
{
    @foreach (Voting voting in Model)
    {
        <div class="container">
            <h5><a class="link" asp-controller="Voting" asp-action="Status" asp-route-Id="@voting.Id">@voting.Name</a></h5>
            <div class="text-end">
                <a class="btn btn-outline-primary"><i class="bi bi-list-check"></i>Пройти</a>
            </div>
        </div>
        <hr>
    }
}
else
{
    <h5>Вы пока не создали ни одного голосования.</h5>
}